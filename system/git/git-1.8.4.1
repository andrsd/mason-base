URI='http://git-core.googlecode.com/files/git-1.8.4.1.tar.gz'
PIDIR=$HOME/usr

mconfigure() {
  cd ${PSRC}
  make configure
}

mpostinstall() {
  do_postinstall
  # install bash profile
  mkdir -p ~/.env.d
  cp ${FILES}/01-git.bashrc ~/.env.d
  # install bash completion
  cp $PSRC/contrib/completion/git-completion.bash ~/.env.d/01-git-completion.bashrc
}

