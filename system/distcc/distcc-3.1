URI='http://distcc.googlecode.com/files/distcc-3.1.tar.gz'
PIDIR=$HOME/usr

munpack() {
  do_unpack
  patch -p0 < ${FILES}/vsnprintf-fix.patch
}

mconfigure() {
  MCONF="--disable-Werror"
}

mpostinstall() {
  do_postinstall
  # install module
  mkdir -p ~/.modules
  cp ${FILES}/distcc-3.1.module ~/.modules/distcc
}

