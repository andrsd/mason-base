PSRC=$PSRC/llvm

munpack() {
  svn co http://llvm.org/svn/llvm-project/llvm/tags/RELEASE_351/final              $PNAMEVER/llvm
  svn co http://llvm.org/svn/llvm-project/openmp/tags/RELEASE_351/final            $PNAMEVER/openmp
  svn co http://llvm.org/svn/llvm-project/libcxx/tags/RELEASE_351/final            $PNAMEVER/llvm/projects/libcxx
  svn co http://llvm.org/svn/llvm-project/compiler-rt/tags/RELEASE_351/final       $PNAMEVER/llvm/projects/compiler-rt
  svn co http://llvm.org/svn/llvm-project/cfe/tags/RELEASE_351/final               $PNAMEVER/llvm/tools/clang
  svn co http://llvm.org/svn/llvm-project/clang-tools-extra/tags/RELEASE_351/final $PNAMEVER/llvm/tools/clang/tools/extra
}

mconfigure() {
  MCONF="--enable-optimized \
         --enable-libcpp \
         --disable-assertions \
         --enable-shared"
}

mpostinstall() {
  do_postinstall
  # install module
  mkdir -p ~/.modules/core/clang
  cp ${FILES}/clang-3.5.1.lua ~/.modules/core/clang/3.5.1.lua
}
