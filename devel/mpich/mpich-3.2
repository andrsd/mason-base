URI=http://www.mpich.org/static/downloads/$PVERSION/mpich-$PVERSION.tar.gz

mconfigure() {
  MCONF="--enable-shared \
         --enable-sharedlibs=clang \
         --enable-fast=O3 \
         --enable-debuginfo \
         --enable-two-level-namespace"
  FLAGS=''
  CFLAGS=$FLAGS
  CXXFLAGS=$FLAGS
  FCFLAGS=$FLAGS
  F90FLAGS=$FLAGS
  F77FLAGS=$FLAGS
  F90=$FLAGS
}

mpostinstall() {
  do_postinstall
  # install module
  mkdir -p ~/.modules/compiler/$ARCH/mpich
  cp ${FILES}/mpich-$PVERSION.lua ~/.modules/compiler/$ARCH/mpich/$PVERSION.lua
}
